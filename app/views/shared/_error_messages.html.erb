<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <!-- The form contains <%= pluralize(@user.errors.count, "error") %>. -->
      <ul class="list-unstyled">
        <% @user.errors.full_messages.each do |msg| %>
          <% if msg.include?("taken") %> 
            <li><%= msg %>.</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>