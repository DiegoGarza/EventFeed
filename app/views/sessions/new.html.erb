<% provide(:title, "Sign in") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="center">Sign in</h1>
    <%= form_for(:session, url: sessions_path, html: { 'data-parsley-validate' => '' }) do |f| %>
      <%= f.text_field :email, class: "form-control", 
                              placeholder: "Email",
                              "data-parsley-type" => "email",
                              "data-parsley-trigger" => 'blur',
                              required: true %>
      <%= f.password_field :password, class: "form-control",
                                      placeholder: "Password",
                                      required: true %>
      <div class="row ">
        <div class="col-md-7">
          <p>Are you new? <%= link_to "Sign up!", signup_path %>
        </div>
        <div class="col-md-5">
          <%= f.submit "Sign in", class: "btn btn-large btn-primary", style: "width: 100%" %>
        </div>
      </div>
    <% end %>
  </div>
</div>  