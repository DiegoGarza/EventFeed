<!--  --><% provide(:title, 'Registration') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="center">Sign up</h1>
    <%= form_for @user, html: { 'data-parsley-validate' => '' } do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.text_field :name, class: "form-control", 
                              placeholder: "Name",
                              required: true,
                              "data-parsley-minlength" => "2",
                              "data-parsley-trigger" => 'blur' %>

      <%= f.text_field :email, class: "form-control",
                               placeholder: "Email",
                               required: true,
                               "data-parsley-type" => "email",
                               "data-parsley-trigger" => 'blur' %>

      <%= f.password_field :password, class: "form-control",
                                      placeholder: "Password",
                                      required: true,
                                      "data-parsley-minlength" => "6",
                                      "data-parsley-trigger" => 'blur' %>

      <%= f.password_field :password_confirmation, class: "form-control",
                                                   placeholder: "Confirm Password",
                                                   required: true,
                                                   "data-parsley-minlength" => "6", 
                                                   "data-parsley-equalto"=>"#user_password", 
                                                   "data-parsley-trigger" => 'blur' %>
                                                   
      <div class="checkbox">
        <label>
          <input type="checkbox">Recieve friendly emails.
        </label>
      </div>
      <%= f.submit "Create my account", class: "long btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
